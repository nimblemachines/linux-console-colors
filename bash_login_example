# Put this into your .bash_login or .profile.

# If we are on a Linux console, set the colors to something decent.
if [ "$TERM" = "linux" ]; then
    # Sequence (+color is bright) is:
    # black red green yellow blue magenta cyan white
    # grey +red +green +yellow +blue +magenta +cyan +white

    ~/set-console-colors \
        000000 aa5555 55aa55 aaaa55 5555aa aa55aa 55aaaa aaaaaa \
        777777 dd7777 77dd77 dddd77 7777dd dd77dd 77dddd dddddd 
fi
